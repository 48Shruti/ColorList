<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="colorFirst"
            type="String"/>
        <variable
            name="colorSecond"
            type="String" />
        <variable
            name="mainActivity"
            type="com.shruti.colorlist.MainActivity" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvcolorfirst"
            android:text="@{colorFirst}"
            android:textSize="@dimen/size_20sp"
            tools:text="@string/colorfirst"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{()->mainActivity.saveColorFirst}"
            android:id="@+id/etcolorfirst"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{colorSecond}"
            android:id="@+id/tvcolorsecond"
            android:textSize="@dimen/size_20sp"
            tools:text="@string/colorsecond"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick=""
            android:id="@+id/etcolorsecond"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etnumber"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnsave"
            android:text="Save"
            android:onClick="@{()->mainActivity.save}"/>
    </LinearLayout>

</layout>