<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="colorfirst"
            type="String"/>
        <variable
            name="colorsecond"
            type="String" />
        <variable
            name="save"
            type="Button" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvcolorfirst"
            android:text="@{colorfirst}"
            android:textSize="@dimen/size_20sp"
            tools:text="@string/colorfirst"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etcolorfirst"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{colorsecond}"
            android:id="@+id/tvcolorsecond"
            android:textSize="@dimen/size_20sp"
            tools:text="@string/colorsecond"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etcolorsecond"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etnumber"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnsave"/>
    </LinearLayout>

</layout>